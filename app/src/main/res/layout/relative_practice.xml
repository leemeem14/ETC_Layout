<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativePracticeActivity">
    <TextView
        android:id="@+id/PNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="전화번호"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PNumEdit"
        android:layout_toRightOf="@id/PNum"
        android:hint="000-0000-000"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/PNumCancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PNumEdit"
        android:layout_alignParentRight="true"
        android:text="취소"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PNumEdit"
        android:layout_toLeftOf="@id/PNumCancle"
        android:layout_marginRight="5dp"
        android:text="확인"/>

</RelativeLayout>